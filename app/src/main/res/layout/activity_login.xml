<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorTint"
    tools:context="com.example.moksleivis.atsiskait.LoggedActivity"
    android:icon="@drawable/food"
    android:label="@string/app_name"
    android:gravity="center_vertical"
    android:padding="20dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="100dp"
        android:layout_width="match_parent"
        android:src="@drawable/food"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:textSize="12sp"
        android:fontFamily="serif"
        android:textAllCaps="true"
        android:gravity="center"
        android:text="Prisijungimo vardas"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:hint="Prisijungimo vardas"
        android:id="@+id/username"/>

    <Space android:layout_height="25dp"
        android:layout_width="match_parent"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Slaptazodis"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:hint="Slaptazodis"
        android:inputType="textPassword"
        android:id="@+id/password"/>

    <Space android:layout_height="15dp"
        android:layout_width="match_parent"/>

    <CheckBox android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Prisiminti mane"/>

    <Space android:layout_height="15dp"
        android:layout_width="match_parent"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Prisijungti"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:onClick="onClickLogin"
        android:id="@+id/buttonLogin"/>

    <Space android:layout_height="25dp"
        android:layout_width="match_parent"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Registruotis"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:onClick="onClickRegister"
        android:id="@+id/buttonRegister"/>


</LinearLayout>
